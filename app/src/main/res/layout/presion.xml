<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFF8F3"
    android:padding="16dp">

    <!-- Título centrado completamente -->
    <TextView
        android:id="@+id/tituloPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🌡️ Presión Atmosférica"
        android:textColor="#B35800"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FEE9D1"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingHorizontal="16dp"
        android:gravity="center"
        android:elevation="4dp">

        <!-- Valor de presión (ahora incluyendo unidad desde el código, no en el XML) -->
        <TextView
            android:id="@+id/texto_pressure_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#92400E"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <!-- Separador -->
        <View
            android:layout_width="160dp"
            android:layout_height="1.5dp"
            android:background="#D97706"
            android:layout_marginVertical="10dp"/>

        <!-- Interpretación -->
        <TextView
            android:id="@+id/texto_pressure_interpretation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Midiendo..."
            android:textColor="#B35800"
            android:textSize="13sp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Info adicional -->
    <TextView
        android:id="@+id/texto_pressure_info"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Presión normal: ~1013 hPa"
        android:textColor="#92400E"
        android:textSize="11sp"
        android:gravity="center"
        android:layout_marginTop="14dp"/>
</LinearLayout>
